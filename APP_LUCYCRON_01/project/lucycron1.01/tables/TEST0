# -------------------------------------
# current working directory
cwd := N:/WORK

# -------------------------------------
# running command
cmd := cmd | bash     # windows | linux
cmd := /c  | -c       # windows | linux
cmd := DIR
cmd := /W

# -------------------------------------
# running environment
env := PARAM1=123
env := PARAM2=hello, world

# -------------------------------------
# cron schecule list
schedule.hour := *    # every hour
schedule.min  := *    # every minute
schedule.day  := *    # every day
schedule.mon  := *    # every month
schedule.week := *    # every week

# -------------------------------------
# properties
properties := tain.lucycron.desc = LucyCron package for package scheduling program
properties := tain.lucycron.version = 1.01
properties := tain.lucycron.author = Seok Kiea Kang


















 
